<Window x:Class="LaboratoryMain.pages.Add_users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaboratoryMain.pages"
        mc:Ignorable="d"
        Title="Добавление пользователя" Height="300" Width="800"
        Icon="/Res/Icons/admin.png">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="35,84,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="lb_login" HorizontalAlignment="Left" Margin="162,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="22"/>

        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="35,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="lb_password" HorizontalAlignment="Left" Margin="162,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="22"/>

        <Label Content="ФИО:" HorizontalAlignment="Left" Margin="35,138,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.539,0.451"/>
        <TextBox x:Name="lb_fio" HorizontalAlignment="Left" Margin="162,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="22"/>

        <Label Content="Номер телефона:" HorizontalAlignment="Left" Margin="414,84,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="lb_phone" HorizontalAlignment="Left" Margin="541,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="216" Height="22"/>

        <Label Content="Почта:" HorizontalAlignment="Left" Margin="414,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="lb_email" HorizontalAlignment="Left" Margin="541,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="215" Height="22"/>

        <Label Content="Должность:" HorizontalAlignment="Left" Margin="414,137,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="lb_role" DisplayMemberPath="name" HorizontalAlignment="Left" Margin="542,142,0,0" Text="" VerticalAlignment="Top" Width="214" Height="22"/>

        <Button Background="#FF34014E" Foreground="White" x:Name="btn_reg" Content="Зарегистрировать пользователя" HorizontalAlignment="Center" Margin="0,224,0,0" VerticalAlignment="Top" Height="30" Width="342" Click="btn_reg_Click"/>
    </Grid>
</Window>
